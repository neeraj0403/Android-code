<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:name="com.codingblocks.count_fragment.fragment_negative"
        android:id="@+id/frag_negative"
        android:layout_width="match_parent"
        android:layout_height="0dp"
      android:layout_weight="1"
        tools:layout="@layout/fragment_fragment_negative"
        />
    <fragment
        android:name="com.codingblocks.count_fragment.fragment_positive"
        android:id="@+id/frag-positive"
        android:layout_width="match_parent"
         android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_fragment_positive"
        />

</LinearLayout>